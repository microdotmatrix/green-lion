---
// Home page

import About from "@/components/sections/about.astro";
import Companies from "@/components/sections/companies.astro";
import Contact from "@/components/sections/contact.astro";
import Hero from "@/components/sections/hero.astro";
import Mission from "@/components/sections/mission.astro";
import Products from "@/components/sections/products.astro";
import Services from "@/components/sections/services.astro";
import Testimonials from "@/components/sections/testimonials.astro";
import Layout from "../layouts/default.astro";
---

<Layout title="Home">
  <section
    id="intro"
    class="w-full bg-secondary h-full lg:h-[65vh] 2xl:h-[80vh] pb-16 lg:pb-0"
  >
    <Hero />
  </section>
  <section id="about">
    <About />
  </section>
  <section id="mission" class="~px-4/8 md:~px-8/24 border-b">
    <Mission />
  </section>
  <section
    id="services"
    class="~py-12/24 bg-gradient-to-b from-secondary to-transparent max-w-full"
  >
    <Services />
    <div id="products" class="content ~space-y-8/12">
      <h4 class="accent-thruline line-end">Our Products</h4>
      <Products />
    </div>
    <div id="clients" class="content ~space-y-8/12">
      <h4 class="accent-thruline line-start">Our Clients</h4>
      <Companies />
    </div>
  </section>
  <section
    id="testimonials"
    class="bg-gradient-to-t from-secondary to-transparent border-b relative w-full"
  >
    <Testimonials />
  </section>
  <!-- <section id="team">
    <Team />
  </section> -->
  <section
    id="contact"
    class="bg-gradient-to-b from-transparent to-secondary ~py-12/24"
  >
    <Contact />
  </section>
</Layout>

<style>
  #intro {
    clip-path: polygon(0 0, 100% 0, 100% 100%, 0 90%);
  }
</style>
